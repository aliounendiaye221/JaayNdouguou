# Environment Variables Template
# Copy this file to .env and configure with your actual values

# Database Configuration
# For local development: SQLite is used automatically (no config needed)
# For production (Vercel/Neon): Uncomment and configure these
# DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require&pgbouncer=true"
# DIRECT_URL="postgresql://user:password@host:5432/database?sslmode=require"

# NextAuth Configuration (REQUIRED)
NEXTAUTH_URL="http://localhost:3000"
# CRITICAL: Generate a unique secret for production using:
# openssl rand -base64 32
NEXTAUTH_SECRET="GENERATE_WITH_openssl_rand_base64_32"

# GitHub OAuth Configuration (Required for GitHub sign-in)
# Create a GitHub OAuth App at https://github.com/settings/developers
# Set Authorization callback URL to: http://localhost:3000/api/auth/callback/github
GITHUB_ID="your_github_oauth_app_client_id"
GITHUB_SECRET="your_github_oauth_app_client_secret"

# WhatsApp Business Number (Public)
NEXT_PUBLIC_WHATSAPP_NUMBER="+221786037913"

# Site Configuration (Public)
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_NAME="JaayNdougou"

# Admin Configuration (First-time setup only)
# These are used to create the initial admin account
ADMIN_EMAIL="admin@jaayndougou.sn"
# CRITICAL: Use a strong password (min 12 chars, mixed case, numbers, symbols)
INITIAL_ADMIN_PASSWORD="CHANGE_THIS_IMMEDIATELY"

# Email Configuration (Optional - Required for sending emails)
# Sign up at https://resend.com to get an API key
# RESEND_API_KEY="re_xxxxxxxxxxxxx"

