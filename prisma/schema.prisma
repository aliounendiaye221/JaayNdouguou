// Production Prisma Schema for PostgreSQL
// Use this schema for Vercel deployment
// Copy this to schema.prisma before deploying

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  price       Float
  unit        String
  image       String
  category    String
  description String?
  stock       Int      @default(100)
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  orderItems  OrderItem[]
  
  @@map("Product")
}

model Customer {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String   @unique
  phone     String
  address   String?
  city      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  orders    Order[]
  claims    Claim[]
  
  @@index([phone])
  @@index([createdAt(sort: Desc)])
  @@map("Customer")
}

model Order {
  id             String      @id @default(cuid())
  orderNumber    String      @unique
  customerId     String
  customer       Customer    @relation(fields: [customerId], references: [id])
  
  // Delivery Info
  deliveryAddress String
  deliveryCity    String
  deliveryPhone   String
  deliveryNotes   String?
  
  // Payment Info
  paymentMethod   String      // "cod", "wave", "orange-money"
  paymentStatus   String      @default("pending") // "pending", "paid", "failed"
  paymentId       String?     // Transaction ID from payment provider
  
  // Order Info
  subtotal        Float
  deliveryFee     Float
  total           Float
  status          String      @default("pending") // "pending", "confirmed", "preparing", "delivering", "delivered", "cancelled"
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  items           OrderItem[]
  claims          Claim[]
  
  @@index([createdAt(sort: Desc)])
  @@index([status])
  @@index([paymentStatus])
  @@index([customerId])
  @@index([createdAt(sort: Desc), status])
  @@map("Order")
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  
  quantity  Int
  price     Float    // Price at time of order
  
  @@map("OrderItem")
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // Hashed password
  name      String
  role      String   @default("admin") // "admin", "super-admin"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("Admin")
}

model Claim {
  id          String   @id @default(cuid())
  orderId     String?
  order       Order?   @relation(fields: [orderId], references: [id])
  customerId  String?
  customer    Customer? @relation(fields: [customerId], references: [id])
  subject     String
  description String
  status      String   @default("pending") // "pending", "in-progress", "resolved", "closed"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("Claim")
}
